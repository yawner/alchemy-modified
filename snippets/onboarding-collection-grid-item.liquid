{% if num_per_row == 2 %}{% capture col_class %}half{% endcapture %}
{% elsif num_per_row == 3 %}{% capture col_class %}third{% endcapture %}
{% elsif num_per_row == 5 %}{% capture col_class %}fifth{% endcapture %}
{% else %}{% capture col_class %}quarter{% endcapture %}{% endif %}

<div class="prod-block coll-block column {{ col_class }}">

  <div class="prod-image-wrap">
    {% capture placeholder_svg_name %}collection-{{ forloop.index0 | modulo: 6 | plus: 1 }}{% endcapture %}
    {{ placeholder_svg_name | placeholder_svg_tag: "placeholder" }}
  </div>

  <div class="prod-caption">
    <div>
      <div class="title">
        {{ "collections.collection_list.empty_collection_title" | t }}
      </div>
    </div>
  </div>

</div>
